@model CityViewModel
<table class="table table-sm table-bordered text-white table-dark">
    <thead>
        <tr>
            <th colspan="2">Hybrid Controller Summary</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Cities:</td>
            <td class="text-right">@Model?.Cities</td>
        </tr>
        <tr>
            <td>Population:</td>
            <td class="text-right">
                @Model?.Population?.ToString("#,###")
            </td>
        </tr>
    </tbody>
</table>